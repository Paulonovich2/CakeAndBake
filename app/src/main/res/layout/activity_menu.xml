<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#B36E6F"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_title"
            android:fontFamily="@font/sunflower"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="111.5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sunflower"
            android:layout_marginLeft="110dp"
            android:textColor="@color/white"
            android:text="@string/nav_header_subtitle" />

        <TextView
            android:id="@+id/textview_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_saludos"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/sunflower"/>

        <TextView
            android:id="@+id/textview_bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_bienvenido"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/sunflower"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="60dp"
            android:background="#FFFFFFFF"
            android:src="@drawable/baseline_person_24"
            tools:ignore="DuplicateIds" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#372122">

        <Button
            android:id="@+id/buttonInicio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Inicio"
            android:background="#97A8A7"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/buttonPerfil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#97A8A7"
            android:text="Mi Perfil"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/buttonPedidos1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Mios Pedidos"
            android:background="#97A8A7"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/buttonContactanos1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#97A8A7"
            android:text="Contactanos"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
